<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile.Views.ProfilePage">
    <ContentPage.Content>
        <StackLayout >
            <StackLayout VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand">
            <Label  FontSize="Medium" Text="Welcome to your profile!"></Label>
            <Label FontSize="Large" x:Name="profileString" Text="{Binding SupervisorName, Mode=TwoWay}" HorizontalOptions="CenterAndExpand"></Label>
                <Button x:Name="Editbutton" Text="Edit username"></Button>
            </StackLayout>
            <Button x:Name="LogoutButton" Text="Logout" Command="{Binding LogoutCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>